<Window x:Class="hostel_managment.AddSummaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Summary" Height="343.259" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Select Member:"/>
            <ComboBox Name="MemberComboBox" Height="25" Margin="0,5" />

            <Label Content="Total Cost:"/>
            <TextBox Name="TotalCostTextBox" Height="25" Margin="0,5"/>

            <Label Content="Paid Cost:"/>
            <TextBox Name="PaidCostTextBox" Height="25" Margin="0,5"/>

            <Label Content="Due Cost:"/>
            <TextBox Name="DueCostTextBox" Height="25" Margin="0,5"/>

            <Button Content="Submit" HorizontalAlignment="Center" Margin="10" Click="SubmitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
