<Window x:Class="hostel_managment.DailyCostPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hostel_managment"
        mc:Ignorable="d"
        Title="DailyCostPage" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="-1,24,1,0">
            <Label Content="Today Cost:"/>
            <TextBox Name="TotalCostTextBox" Height="25" Margin="0,5"/>

            <Label Content="Today Mill:"/>
            <TextBox Name="PaidCostTextBox" Height="25" Margin="0,6"/>

            <Button Content="Submit" HorizontalAlignment="Center" Margin="10" Click="SubmitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
