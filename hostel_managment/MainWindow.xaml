        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Navigated="MainFrame_Navigated"/>
        <Label Content="Admin Login" Margin="174,46,192,0" FontSize="24" BorderBrush="#FFFFB9B9"/>
        <TextBox x:Name="input_email" Margin="145,110,152,184" Background="#FFBBB8B8"/>
        <Label Content="Email" Margin="76.541,104.463,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="16"/>
