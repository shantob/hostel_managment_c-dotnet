<Window x:Class="hostel_managment.AddMember"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hostel_managment"
        mc:Ignorable="d"
        Title="AddMember" Height="315.789" Width="300">
    <Grid Margin="10,0,14,-2">
        <StackPanel>
         
            <Label Content="Member Name:"/>
            <TextBox Name="NameTextBox" Height="25" Margin="0,5"/>

            <Label Content="Member Email :"/>
            <TextBox Name="EmailTextBox" Height="25" Margin="0,5"/>

            <Label Content="Phone Number:"/>
            <TextBox Name="PhoneTextBox" Height="25" Margin="0,5"/>

            <Label Content="Address :"/>
            <TextBox Name="AddressTextBox" Height="25" Margin="0,5"/>
            
            <Button Content="Submit" HorizontalAlignment="Center" Margin="10" Click="SubmitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
